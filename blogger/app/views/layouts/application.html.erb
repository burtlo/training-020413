<!DOCTYPE html>
<html>
<head>
  <%= yield :head %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="flash"><%= flash[:message] %></p>
  <%= yield %>

  <% if logged_in? %>
    Logged in as <%= current_user.username %>
    (<%= link_to "Logout", logout_path %>)
  <% else %>
    Logged out
    (<%= link_to "Login", login_path %>)
  <% end %>
</body>
</html>
